<div class="card">
    <div class="card-header  flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">
                <div class="col-8">{{title}}</div>
            </a>
        </h2>
        <div class="col-3">posted by {{user.username}} on {{format_date date_created}}
        </div>
    </div>
    
    <p class="card-body">
        {{content}}
    </p>
</div>

<input type="hidden" name="post-id" value="{{id}}" />

<div class="card">
    <div class="card-header"></div>

    <form class="card-body" id="new-comment-form">
        <p class="form-label">Comment:</p>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
        <button type="submit" class="btn btn-primary">Submit:</button>
    </form>

    <div class="comments">
        {{#each this}}
        <div>
            <p class="card-body2">
                {{comment.comment}} - {{user.username}} {{format_date date_created}}
            </p>
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/comment.js"></script>